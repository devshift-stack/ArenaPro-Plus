// ════════════════════════════════════════════════════════════════════════════
// AI ARENA - PRISMA SCHEMA
// ════════════════════════════════════════════════════════════════════════════

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ════════════════════════════════════════════════════════════════════════════
// USER & AUTH
// ════════════════════════════════════════════════════════════════════════════

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  avatar    String?
  role      UserRole @default(USER)
  settings  Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  chats             Chat[]
  messages          Message[]
  teams             TeamMember[]
  ownedTeams        Team[]              @relation("TeamOwner")
  memories          Memory[]
  memorySettings    MemorySettings?
  knowledgeEntries  KnowledgeEntry[]
  verifications     KnowledgeVerification[]
  prompts           Prompt[]
  integrations      Integration[]
  learningEvents    LearningEvent[]
  approvedRules     ActiveRule[]

  @@index([email])
}

enum UserRole {
  USER
  ADMIN
}

// ════════════════════════════════════════════════════════════════════════════
// TEAMS
// ════════════════════════════════════════════════════════════════════════════

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?
  settings    Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  ownerId          String
  owner            User               @relation("TeamOwner", fields: [ownerId], references: [id])
  members          TeamMember[]
  chats            Chat[]
  knowledgeEntries KnowledgeEntry[]
  prompts          Prompt[]

  @@index([ownerId])
}

model TeamMember {
  id        String         @id @default(cuid())
  role      TeamMemberRole @default(MEMBER)
  createdAt DateTime       @default(now())

  teamId String
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

enum TeamMemberRole {
  OWNER
  ADMIN
  MEMBER
}

// ════════════════════════════════════════════════════════════════════════════
// CHATS & MESSAGES
// ════════════════════════════════════════════════════════════════════════════

model Chat {
  id             String    @id @default(cuid())
  title          String    @default("New Chat")
  mode           ArenaMode @default(AUTO_SELECT)
  selectedModels String[]  @default([])
  metadata       Json      @default("{}")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Relations
  userId   String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId   String?
  team     Team?     @relation(fields: [teamId], references: [id], onDelete: SetNull)
  messages Message[]
  memories Memory[]

  @@index([userId])
  @@index([teamId])
  @@index([updatedAt])
}

enum ArenaMode {
  AUTO_SELECT
  COLLABORATIVE
  DIVIDE_CONQUER
  PROJECT
  TESTER
}

model Message {
  id          String      @id @default(cuid())
  role        MessageRole
  content     String
  modelId     String?
  tokens      Int?
  cost        Float?
  metadata    Json        @default("{}")
  attachments String[]    @default([])
  createdAt   DateTime    @default(now())

  // Relations
  chatId String
  chat   Chat    @relation(fields: [chatId], references: [id], onDelete: Cascade)
  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([chatId])
  @@index([createdAt])
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// ════════════════════════════════════════════════════════════════════════════
// MEMORY SYSTEM
// ════════════════════════════════════════════════════════════════════════════

model Memory {
  id           String     @id @default(cuid())
  type         MemoryType
  content      String     // Encrypted
  embedding    Float[]    // Vector for similarity search
  importance   Float      @default(0.5)
  accessCount  Int        @default(0)
  lastAccessed DateTime?
  metadata     Json       @default("{}")
  expiresAt    DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  // Relations
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  chatId String?
  chat   Chat?   @relation(fields: [chatId], references: [id], onDelete: SetNull)

  @@index([userId, type])
  @@index([userId, createdAt])
}

enum MemoryType {
  SHORT_TERM
  LONG_TERM
  SEMANTIC
  EPISODIC
}

model MemorySettings {
  id              String   @id @default(cuid())
  enabled         Boolean  @default(true)
  retentionDays   Int      @default(365)
  autoExtract     Boolean  @default(true)
  excludePatterns String[] @default([])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ════════════════════════════════════════════════════════════════════════════
// KNOWLEDGE BASE
// ════════════════════════════════════════════════════════════════════════════

model KnowledgeEntry {
  id        String              @id @default(cuid())
  content   String
  source    String?
  tags      String[]            @default([])
  status    KnowledgeStatus     @default(BETA)
  embedding Float[]
  metadata  Json                @default("{}")
  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt

  // Relations
  userId        String
  user          User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId        String?
  team          Team?                   @relation(fields: [teamId], references: [id], onDelete: SetNull)
  verifications KnowledgeVerification[]

  @@index([userId])
  @@index([status])
  @@index([tags])
}

enum KnowledgeStatus {
  PENDING
  BETA
  VERIFIED
}

model KnowledgeVerification {
  id         String   @id @default(cuid())
  isCorrect  Boolean  @default(true)
  notes      String?
  modelId    String?
  createdAt  DateTime @default(now())

  entryId      String
  entry        KnowledgeEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  verifiedById String
  verifiedBy   User           @relation(fields: [verifiedById], references: [id], onDelete: Cascade)

  @@index([entryId])
}

// ════════════════════════════════════════════════════════════════════════════
// PROMPTS
// ════════════════════════════════════════════════════════════════════════════

model Prompt {
  id        String   @id @default(cuid())
  title     String
  content   String
  category  String   @default("general")
  tags      String[] @default([])
  isPublic  Boolean  @default(false)
  usageCount Int     @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  userId String
  user   User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  teamId String?
  team   Team?   @relation(fields: [teamId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([category])
  @@index([isPublic])
}

// ════════════════════════════════════════════════════════════════════════════
// INTEGRATIONS
// ════════════════════════════════════════════════════════════════════════════

model Integration {
  id           String   @id @default(cuid())
  type         String   // google-drive, github, etc.
  accessToken  String
  refreshToken String?
  metadata     Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
}

// ════════════════════════════════════════════════════════════════════════════
// LEARNING SYSTEM
// ════════════════════════════════════════════════════════════════════════════

model LearningEvent {
  id        String            @id @default(cuid())
  type      LearningEventType
  modelId   String
  chatId    String?
  content   String
  metadata  Json              @default("{}")
  createdAt DateTime          @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([type])
  @@index([modelId])
  @@index([createdAt])
}

enum LearningEventType {
  ERROR
  CORRECTION
  FEEDBACK
  IMPROVEMENT
}

model ProposedRule {
  id              String             @id @default(cuid())
  title           String
  description     String
  instruction     String
  category        String
  severity        RuleSeverity       @default(MEDIUM)
  examples        Json               @default("[]")
  confidence      Float              @default(0.5)
  status          ProposedRuleStatus @default(PENDING)
  rejectionReason String?
  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt

  @@index([status])
  @@index([createdAt])
}

enum ProposedRuleStatus {
  PENDING
  APPROVED
  REJECTED
}

enum RuleSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

model ActiveRule {
  id          String       @id @default(cuid())
  title       String
  description String
  instruction String
  category    String
  severity    RuleSeverity @default(MEDIUM)
  examples    Json         @default("[]")
  isActive    Boolean      @default(true)
  usageCount  Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  approvedById String
  approvedBy   User   @relation(fields: [approvedById], references: [id])

  @@index([isActive])
  @@index([category])
}
