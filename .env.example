# AI Arena - Environment Configuration
# Copy this file to .env and fill in the values

# ==================== REQUIRED ====================

# OpenRouter API Key (get from https://openrouter.ai)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI API Key (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI API Base URL (default: https://api.openai.com/v1)
OPENAI_API_BASE_URL=https://api.openai.com/v1

# JWT Secret (min 32 characters, generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters

# Encryption Key (min 32 characters, generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your_encryption_key_at_least_32_characters

# ==================== DATABASE ====================

# PostgreSQL
DB_PASSWORD=arena_secure_password

# Database URL (for backend direct connection)
DATABASE_URL=postgresql://arena_user:arena_secure_password@localhost:5432/ai_arena

# ==================== REDIS ====================

REDIS_PASSWORD=redis_secure_password
REDIS_URL=redis://:redis_secure_password@localhost:6379

# ==================== STORAGE ====================

# MinIO / S3
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key
MINIO_BUCKET=ai-arena

# ==================== URLS ====================

# Frontend URL
FRONTEND_URL=http://localhost:3000

# API URL (for frontend)
API_URL=http://localhost:3001/api

# WebSocket URL (for frontend)
WS_URL=ws://localhost:3001

# Backend Proxy Target (for Vite dev server)
VITE_BACKEND_PROXY_TARGET=http://localhost:4000

# ==================== OPTIONAL ====================

# Google OAuth (optional, for Google Drive integration)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (optional, for GitHub integration)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Logging Level (fatal, error, warn, info, debug, trace)
LOG_LEVEL=info

# Node Environment (development, production, test)
NODE_ENV=development
